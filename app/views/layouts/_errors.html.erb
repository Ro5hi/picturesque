<% if object.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(object.errors.count, "error") %> prohibited
        this order because of:
      </h2>
      <ul>
        <% object.errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>