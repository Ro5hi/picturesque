<div class="container">
    <div class="row">
            <div class="col-4 center">
                <%= image_tag @user.photo.url, :size => "150x150", class: "img-rounded" %>
            </div>

                <div class="col-8 text-center">
                    <h1><%= @user.username %></h1>
                        <h6><%= @user.name %></h6>
                    <p><%= simple_format @user.description %></p>
                    <%= link_to edit_user_registration_path, class: "btn-btn-muted" %>
                </div>

                <div class="row">
                    <div class="col-4">
                        <% @posts.each do |post| %>
                            <%= image_tag @user.post.photo.url, :size => "150x150", :crop => :fill %>
                        <% end %> 
                    </div>
                </div>           
        
    </div>
</div>