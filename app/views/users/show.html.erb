<p> <%= render partial: 'layouts/messages', locals: {object: @post}  %> </p>

</div>
<center>    
    <div class="container">
        <div class="row">
            <div class="col-4">
                    <%= image_tag @user.photo.url, :size => "125x125", class: "img-thumbnail" %>
                    <div class="col-8 text-center">
                            <h3><%= @user.name %></h3>
                        <p><%= simple_format @user.description %></p>
                    </div>
                    <br>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8">
                                <% @user.posts.each do |post| %>
                                    <a href=<%= "/#{@user.username}/posts/#{post.id}" %>>
                                <%= image_tag post.photo.url, :size => "150x150", class: 'img-responsive post-img' %>
                            <% end %> 
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</center>