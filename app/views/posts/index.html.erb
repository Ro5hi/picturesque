<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
                <div><%= post.user.username %></div>
                <%= image_tag post.photo.url, :size => "500x600", :crop => :fill %>          
            <% end %>
        </div>
    </div>
</div>