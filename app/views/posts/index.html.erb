<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
                <div><strong><%= link_to "#{ post.user.username }", "/profile/#{post.user.username}" %></div></strong>
                <a href=<%= "/posts/#{post.id}" %>><%= image_tag post.photo.url, :size => "300x300", class: 'img-responsive post-img' %>
                <div class="row"><p><%= simple_format post.caption %></p></div>
            <% end %>
        </div>
    </div>
</div>