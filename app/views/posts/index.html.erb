<div class="container">
    <div class="row">
        <div class="col-8">
            <% @posts.each do |post| %>
                <div><strong><%= post.user.username %></div></strong>
                <%= image_tag post.photo.url, :size => "300x300", :crop => :fill %>
                <div class="row"><p><%= simple_format post.caption %></p></div>
                <%= link_to "Post", '/posts/:id' %>
            <% end %>
        </div>
    </div>
</div>