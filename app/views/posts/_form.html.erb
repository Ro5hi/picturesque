<%= stylesheet_link_tag "forms" %>

<p> <%= render partial: 'layouts/messages', locals: {object: @post}  %> </p>

  
  <%= form_for [current_user, @post], :html => {:multipart => true} do |f| %>
    <div class="form">
      <%= f.label :photo %><br />
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %> 
      <%= f.hidden_field :user_id, value: current_user.id, class:'d-none'%>   
    </div>

    <div class="form">
      <%= f.label :caption %>
      <%= f.text_field :caption %>
      <%= f.hidden_field :user_id, value: current_user.id, class: 'd-none'%>
    </div>

    <div class="form">
      <%= f.label :tag_list %>
      <%= f.text_field :tag_list, placeholder: "Tags separated with comma" %>
      <%= f.hidden_field :user_id, value: current_user.id, class: 'd-none'%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>