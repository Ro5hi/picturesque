  <div class="alert alert-danger" role="alert">
    <% if @post && @post.errors.any? %>
      <h2><strong><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2></strong>
    <% end %>  
  </div>
  <%= form_for Post.new, :html => {:multipart => true} do |f| %>
    <div class="form-group">
      <%= f.label :photo %><br />
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %> 
      <%= f.hidden_field :user_id, value: current_user.id, class:'d-none'%>   
    </div>

    <div class="form-group">
      <%= f.label :caption %>
      <%= f.text_field :caption %>
      <%= f.hidden_field :user_id, value: current_user.id, class: 'd-none'%>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>