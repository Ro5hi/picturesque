<%= link_to 'Feed', feed_path %>

    <%= image_tag @post.photo.url, :size => "300x300", :crop => :fill %>
 
    <div class="container">
        <strong><%= @user.username %></strong>
        <p><%= simple_format @post.caption %></p>
    </div>

    <div class="row">
    <% @post.comments.each do |comment| %>
        <%= @comment.body %>
        <br>
    <% end %>
    </div>
    <div class="container">
        <%= link_to "Comment Post", new_comment_path(post_id:@post.id) %>
    </div>

    <div class="container">
        <div class="row">
        <% if @post.user == current_user %>
            <p><%= link_to 'Edit', edit_post_path(post_id:@post.id) %></p>
            <p><%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"}, class: 'label alert' %></p>
        <% else %>
            <%= link_to "Back", :back %>
        <% end %>
        </div>
    </div>