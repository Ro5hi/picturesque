<div class="container">
  <% if logged_in? %>
  <%= form_for([@comment.post, @comment]) do |f| %>
    <% if @comment.errors.any? %>
    <%= pluralize(@comment.errors.count, "error") %>

    <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= message %></li>
    <% end %>

  <div class="field">
      <%= f.text_field :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
    <% end %>
  <% else %>
    <h3>Please login to your account to comment on this post.</h3>
  <% end %>
  </div>
</div>